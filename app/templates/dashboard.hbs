<table>
  <thead>
    <tr class="full-width-row">
      <th><label for="select-all">(
          {{this.selectedNumberOfDownloads}}
          ) Select All</label>
        <input
          type="checkbox"
          id="select-all"
          checked={{this.checkedStatus}}
          indeterminate={{this.someChecked}}
          {{on "change" this.selectAll}}
        />
      </th>
      <th colspan="4" class="download_cell"><span class="flex-container">
          <button
            class="btn flex-item"
            type="button"
            {{on "click" this.downloadSelectedRows}}
          ><i class="fa fa-download icon" aria-hidden="true"></i>Download
            Selected Rows</button></span></th>
    </tr>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Device</th>
      <th>Path</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    {{#each @model as |dataRow|}}
      <DataRow
        @name="{{dataRow.name}}"
        @status="{{dataRow.status}}"
        @dataRow={{dataRow}}
        @updateChecked={{this.updateChecked}}
      />
    {{/each}}
  </tbody>
</table>
{{#if this.showModal}}
  <CustomModal
    @title="Downloads"
    @message={{this.modalMessage}}
    @onClose={{this.closeModal}}
  />
{{/if}}